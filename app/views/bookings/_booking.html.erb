<div class="mx-auto w-full max-w-7xl px-5 py-16 md:px-10 md:py-20">
  <div class="justify-items-center gap-4 bg-gray-100 p-8">
    <div class="text-center md:text-start">
      <h2 class="mb-2 text-3xl font-bold md:text-5xl"> <%= booking.batch.experience.title %> </h2>
      <p class="max-w-md text-sm sm:test-base text-gray-400"> <%= booking.status %> </p>
      <p class="text-xl mt-8 font-bold text-gray-500 sm:text-base"> R$ <%= booking.batch.price/100 %> </p>
    </div>
    <% if booking.status == "confirmed" %>
      <%= button_to "Pedir reembolso", refunds_path(booking_id: booking.id), method: :post, data: { confirm: "Tem certeza?" }, class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" %>
    <% end %>
  </div>
</div>